{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "paths": {
      "ts-handling": ["index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
