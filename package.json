{
  "name": "ts-handling",
  "version": "0.2.1",
  "description": "Error handling for TypeScript applications",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MynthAI/ts-handling.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=18.18 <=21"
  },
  "type": "module",
  "scripts": {
    "build": "rm -rf ./dist && npx tsc",
    "prettier": "npx prettier -w '**/*.{js,jsx,ts,tsx,json,yml.j2,yml,yaml,.*}'",
    "lint": "concurrently \"npx prettier --check '**/*.{js,jsx,ts,tsx,json,yml.j2,yml,yaml,.*}'\" \"npx eslint . --max-warnings=0\"",
    "test": "npx ava"
  },
  "dependencies": {
    "flatted": "^3.3.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "ava": "^6.1.2",
    "concurrently": "^8.2.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-ava": "^14.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^2.8.8",
    "tsx": "^4.9.3"
  },
  "ava": {
    "files": [
      "src/tests/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx",
      "--no-warnings"
    ]
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.yml.j2",
        "options": {
          "parser": "yaml"
        }
      }
    ]
  }
}
